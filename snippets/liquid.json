{
    "Section": {
        "scope": "liquid",
        "prefix": "template-section",
        "body": [
            "{%- comment -%}",
            "-------------------------------------------------------------------------------",
            "${1:${TM_FILENAME_BASE/(^\\w*)|(-)/${1:/pascalcase}${2:+ }/g}}",
            "-------------------------------------------------------------------------------",
            "Description",
            "${2:Describe the ${TM_FILENAME_BASE/(^\\w*)|(-)/${1:/pascalcase}${2:+ }/g}}",
            "-------------------------------------------------------------------------------",
            "Usage",
            "{% section '$TM_FILENAME_BASE' %}",
            "-------------------------------------------------------------------------------",
            "{%- endcomment -%}",
            "",
            "{%- liquid",
            "   assign ${3:variable_name} = ${4:''}",
            "-%}",
            "",
            "<section class=\"section\">",
            "  <div class=\"section__inner container\">",
            "    <div class=\"section__body\">",
            "      ${5}",
            "    </div>",
            "  </div>",
            "</section>",
            "",
            "{% schema %}",
            "{",
            "  \"name\": \"${1:${TM_FILENAME_BASE/(^\\w*)|(-)/${1:/pascalcase}${2:+ }/g}}\",",
            "  \"presets\": [",
            "    {",
            "      \"name\": \"${1:${TM_FILENAME_BASE/(^\\w*)|(-)/${1:/pascalcase}${2:+ }/g}}\"",
            "    }",
            "  ]",
            "}",
            "{% endschema %}"
        ],
        "description": "Boilerplate markup for a section comment"
    },
    "Snippet": {
        "scope": "liquid",
        "prefix": "template-snippet",
        "body": [
            "{%- comment -%}",
            "-------------------------------------------------------------------------------",
            "${1:${TM_FILENAME_BASE/(^\\w*)|(-)/${1:/pascalcase}${2:+ }/g}}",
            "-------------------------------------------------------------------------------",
            "Description",
            "${2:Describe the ${TM_FILENAME_BASE/(^\\w*)|(-)/${1:/pascalcase}${2:+ }/g}}",
            "-------------------------------------------------------------------------------",
            "Accepts",
            "- ${3:variable_name}: ${4|Object,String,Number,Boolean,Nil,Array,EmptyDrop|} - ${5:Describe the variable}.",
            "-------------------------------------------------------------------------------",
            "Usage",
            "{% render '$TM_FILENAME_BASE', ${3:variable_name}: ${6:''} %}",
            "-------------------------------------------------------------------------------",
            "{%- endcomment -%}",
            "",
            "${7}"
        ],
        "description": "Boilerplate markup for a snippet comment"
    }
}