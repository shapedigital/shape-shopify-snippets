{
	"scaffold-css": {
		"scope": "css,pcss,postcss",
		"prefix": ["scaffold-css", "s-css"],
		"body": [
			"/*",
			"-------------------------------------------------------------------------------",
			"${1:Name of component}",
			"-------------------------------------------------------------------------------",
			"@namespace: ${TM_FILENAME_BASE/[\\_]//}",
			"-------------------------------------------------------------------------------",
			"*/",
			"",
			".${TM_FILENAME_BASE/[\\_]//} {",
			"\t${4}",
			"}"
		],
		"description": "Boilerplate markup for a css comment. Replaces first underscore."
	},
	"scaffold-mixin": {
		"scope": "css,pcss,postcss",
		"prefix": ["scaffold-css-mixin", "c-css-mixin"],
		"body": [
			"/*",
			"-------------------------------------------------------------------------------",
			"${1:Name of mixin}",
			"-------------------------------------------------------------------------------",
			"Description",
			"${2:Describe the mixin}",
			"-------------------------------------------------------------------------------",
			"Accepts",
			"- ${3:variable_name}: ${4|Object,String,Number,Boolean,Nil,Array|} - ${5:Describe the variable}.",
			"-------------------------------------------------------------------------------",
			"Usage",
			"@mixin ${TM_FILENAME_BASE/[\\_]//}",
			"-------------------------------------------------------------------------------",
			"Reference",
			"https://github.com/postcss/postcss-mixins",
			"-------------------------------------------------------------------------------",
			"*/"
		],
		"description": "Boilerplate markup for a css mixin."
	}
}