{
	"scaffold-ruby": {
		"scope": "ruby",
		"prefix": ["scaffold-ruby", "s-ruby"],
		"body": [
			"=begin",
			"-------------------------------------------------------------------------------",
			"${1:${TM_FILENAME_BASE/(^\\w*)|(-)/${1:/pascalcase}${2:+ }/g}}",
			"-------------------------------------------------------------------------------",
			"Description",
			"${2:Describe the shopify script}",
			"-------------------------------------------------------------------------------",
			"Variables",
			"- ${3:variable_name}: ${4|Object,String,Number,Boolean,Nil,Array,EmptyDrop|} - ${5:Description}.",
			"-------------------------------------------------------------------------------",
			"Reference",
			"https://help.shopify.com/en/manual/checkout-settings/script-editor/",
			"-------------------------------------------------------------------------------",
			"=end"
		],
		"description": "Boilerplate markup for a ruby comment"
	}
}